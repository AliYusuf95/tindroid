<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AvatarView">
        <!-- AvatarView border color -->
        <attr name="tinui_AvatarBorderColor" format="color|reference" />
        <!-- Border width of AvatarView -->
        <attr name="tinui_AvatarBorderWidth" format="dimension|reference" />
        <!-- Text size of the AvatarView's initials letters -->
        <attr name="tinui_AvatarTextSize" format="dimension|reference" />
        <!-- A color of the AvatarView's initials letters -->
        <attr name="tinui_AvatarTextColor" format="color|reference" />
        <!-- Font name of the AvatarView's initials letters -->
        <attr name="tinui_AvatarTextFont" format="reference" />
        <!-- Font assets reference for the AvatarView's initials letters -->
        <attr name="tinui_AvatarTextFontAssets" format="string" />
        <!-- Text style of the AvatarView's initials letters -->
        <attr name="tinui_AvatarTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <!-- Sets the visibility of the online indicator -->
        <attr name="tinui_AvatarOnlineIndicatorEnabled" format="boolean" />
        <!-- Sets the position of the online indicator -->
        <attr name="tinui_AvatarOnlineIndicatorPosition" format="enum">
            <enum name="topLeft" value="0" />
            <enum name="topRight" value="1" />
            <enum name="bottomLeft" value="2" />
            <enum name="bottomRight" value="3" />
        </attr>
        <!-- Color of the online indicator -->
        <attr name="tinui_AvatarOnlineIndicatorColor" format="color|reference" />
        <!-- Border color of the online indicator -->
        <attr name="tinui_AvatarOnlineIndicatorBorderColor" format="color|reference" />
        <attr name="tinui_AvatarShape" format="enum">
            <enum name="circle" value="0"/>
            <enum name="square" value="1"/>
        </attr>
        <attr name="tinui_AvatarBorderRadius" format="dimension|reference"/>
    </declare-styleable>
</resources>

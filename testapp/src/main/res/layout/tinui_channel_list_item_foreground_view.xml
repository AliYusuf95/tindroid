<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/foregroundView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tinui_channel_list_item_height"
    android:background="@drawable/tinui_foreground_channel_list">

    <com.example.testapp.components.avatar.AvatarView
        android:id="@+id/avatarView"
        style="?attr/tinui_ChannelListItemAvatarStyle"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_width="50dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/channelNameLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/tinui_TextAppearance.BodyBold"
        android:textDirection="locale"
        app:layout_constraintBottom_toTopOf="@+id/lastMessageLabel"
        app:layout_constraintStart_toEndOf="@+id/avatarView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Gebruiker, Usuario, Benutzer" />

    <TextView
        android:id="@+id/lastMessageLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/tinui_TextAppearance.Footnote"
        android:textDirection="locale"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/messageStatusImageView"
        app:layout_constraintStart_toStartOf="@+id/channelNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/channelNameLabel"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus a." />

    <TextView
        android:id="@+id/lastMessageTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAppearance="@style/tinui_TextAppearance.Footnote"
        android:textDirection="locale"
        app:layout_constraintBaseline_toBaselineOf="@+id/lastMessageLabel"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="3:00PM" />

    <ImageView
        android:id="@+id/messageStatusImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/lastMessageLabel"
        app:layout_constraintEnd_toStartOf="@+id/lastMessageTimeLabel"
        app:layout_constraintTop_toTopOf="@+id/lastMessageLabel"
        tools:ignore="ContentDescription"
        tools:src="@drawable/tinui_ic_check_double" />

    <ImageView
        android:id="@+id/verifiedStatusImageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/lastMessageTimeLabel"
        app:layout_constraintStart_toEndOf="@+id/channelNameLabel"
        app:layout_constraintTop_toTopOf="@id/channelNameLabel"
        tools:ignore="ContentDescription"
        tools:src="@drawable/tinui_ic_verified"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/staffStatusImageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/lastMessageTimeLabel"
        app:layout_constraintStart_toEndOf="@+id/verifiedStatusImageView"
        app:layout_constraintTop_toTopOf="@id/channelNameLabel"
        tools:ignore="ContentDescription"
        tools:src="@drawable/tinui_ic_verified_user"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/dangerStatusImageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/lastMessageTimeLabel"
        app:layout_constraintStart_toEndOf="@+id/staffStatusImageView"
        app:layout_constraintTop_toTopOf="@id/channelNameLabel"
        tools:ignore="ContentDescription"
        tools:src="@drawable/tinui_ic_danger"
        tools:visibility="visible" />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dangerStatusImageView"
        app:layout_constraintEnd_toStartOf="@id/muteIcon"
        />

    <ImageView
        android:id="@+id/muteIcon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/lastMessageTimeLabel"
        app:layout_constraintEnd_toStartOf="@id/unreadCountBadge"
        app:layout_constraintTop_toTopOf="@id/channelNameLabel"
        tools:ignore="ContentDescription"
        tools:src="@drawable/tinui_ic_mute"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/unreadCountBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/tinui_shape_badge_background"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="@color/tinui_literal_white"
        android:textDirection="locale"
        android:textSize="@dimen/tinui_text_small"
        app:layout_constraintBottom_toTopOf="@+id/lastMessageTimeLabel"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="99" />

</androidx.constraintlayout.widget.ConstraintLayout>
